<!DOCTYPE html>
<html ng-app="starter">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <base href="/">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Oswald:400,700,300' rel='stylesheet' type='text/css'>
</head>
<body ng-cloak>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container" ng-controller="loginController as vm">
            <div class="navbar-header">
                <a href="/" class="navbar-brand"><b>Gridiron</b>Grub</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown" ng-show="vm.isAdmin();">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/orders">Orders</a></li>
                            <li><a href="/park">Park</a></li>
                            <li><a href="/employees">Employees</a></li>
                        </ul>
                    </li>
                    <li><a href="/manager" ng-show="vm.isManager();">Manager</a></li>
                    <li><a href="/vendor" ng-show="vm.isVendor();">Vendor</a></li>
                    <li><a href="/runner" ng-show="vm.isRunner();">Runner</a></li>
                    <li><a href="/shop">Shop</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/login" ng-show="!vm.isLoggedIn()">Login</a></li>

                    <li><a ng-click="vm.logout()" ng-show="vm.isLoggedIn()" style="cursor:pointer;">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/braintree")
    @RenderSection("scripts", required: false)
</body>
</html>
